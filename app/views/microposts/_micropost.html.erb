
<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12 post">
                <% @microposts.each do |post| %>
                    <div class="row">
                        <div class="col-md-12">
                            <h4>
                                <strong><%= link_to post.title, micropost_path(post.id) %></strong>
                            </h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 post-header-line">
                            <span class="glyphicon glyphicon-user"></span>by <%= link_to post.user.name,user_path(post.user) %> | <span class="glyphicon glyphicon-calendar">
                            </span><%= l(post.created_at,format: '%B, %d %Y %H:%M:%S')%> | <span class="glyphicon glyphicon-comment"></span>
                                <%= post.comments.count %> comments
                        </div>
                    </div>
                    <div class="row post-content">
                        <div class="col-md-3">
                        <div class="comment-avatar">
                            <%= link_to user_path(post.user) do %>
                            <%= image_tag post.user.picture_url%>
                            <% end %>
                        </div>
                        </div>
                        <div class="col-md-9">
                            <p>
                                    <% if post.content.length > 250 %>
                                    <%= truncate(post.content, length: 250) %>
                                    <%= link_to "Readmore...",micropost_path(post.id), class: "btn btn-read-more" %>
                                    <% else %>
                                    <%= post.content %>
                                     <% end %>                              
                            </p>         
                        </div>
                    </div>
                    <%end%>
                </div>
            </div>
            
        </div>
    </div>
</div>
 <%= will_paginate @microposts %>