<% @user ||= current_user %>
<div class="col-lg-12 col-sm-6">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="http://lorempixel.com/100/100/people/9/">
            <!-- http://lorempixel.com/850/280/people/9/ -->
        </div>
        <div class="useravatar">
            <%= image_tag @user.picture_url%>
        </div>
        <div class="card-info"> <span class="card-title"><%= @user.name %></span>

        </div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        
          <%= render 'follow_form' %>
            
        <div class="btn-group" role="group"> 		
            <button type="button", class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Followers</div>   
                <div id="followers"><%= @user.followers.count%></div>
            </button>
        </div>

        <div class="btn-group" role="group">
            <button type="button" , class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Following</div>
                <div id="following"><%= @user.following.count%></div>
            </button>
        </div>    
    </div>
        
    <div class="well">
      <div class="tab-content">
        <% if @user = current_user %>
       
       <div class="tab-pane fade in active" id="tab1">

          <h3>All Entry</h3>
           <%= render 'microposts/micropost' %>
        </div>
           
        <% end %>
      </div>
    </div>
</div>


            
    