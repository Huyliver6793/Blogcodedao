<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12 post">
                
                    <div class="row">
                        <div class="col-md-12">
                            <h4>
                                <strong><%= @micropost.title %></strong>
                            </h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 post-header-line">
                            <span class="glyphicon glyphicon-user"></span>by <%= @micropost.user.name %> | <span class="glyphicon glyphicon-calendar">
                            </span><%= @micropost.created_at%> | <span class="glyphicon glyphicon-comment"></span><a href="#">
                                <%= @micropost.comments.count%>comments %></a> | <i class="icon-share"></i><a href="#">39 Shares</a> | <span class="glyphicon glyphicon-tags">
                                </span>Tags : <a href="#"><span class="label label-info">Snipp</span></a> <a href="#">
                                    <span class="label label-info">Bootstrap</span></a> <a href="#"><span class="label label-info">
                                        UI</span></a> <a href="#"><span class="label label-info">growth</span></a>
                        </div>
                    </div>
                    <div class="row post-content">
                       
                        <div class="col-md-9">
                            <p>     
                                <%= @micropost.content %>
                            </p>         
                        </div>
                    </div>
                    
                </div>
            </div>
            <span class="glyphicon glyphicon-wrench"></span> <%= link_to "Edit" , edit_micropost_path %>
            <span class="glyphicon glyphicon-trash"></span> <%= link_to "Delete",@micropost,method: :delete, data: {confirm: "bạn muốn xóa chứ?"} %>
        </div
    </div>
</div>
<%= render "comments/comment" %>
<%= render "comments/form" %>
   


