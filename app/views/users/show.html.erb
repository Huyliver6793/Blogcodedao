
<% @user ||= current_user %>
<div class="col-lg-12 col-sm-6">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="http://lorempixel.com/100/100/people/9/">
            <!-- http://lorempixel.com/850/280/people/9/ -->
        </div>
        <div class="useravatar">
            <img alt="" src="http://lorempixel.com/100/100/people/9/">
        </div>
        <div class="card-info"> <span class="card-title">Pamela Anderson</span>

        </div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
        	<% unless current_user?(@user) %>
        	<%= form_for(current_user.active_relationships.build,remote: true) do |f| %>
  			<div><%= hidden_field_tag :followed_id, @user.id %></div>
            <%= f.submit "Follow", type: "button", id: "follow", class: "btn btn-primary", datatoggle: "tab" %>
            <% end %>
            <% end %>
          	
        </div>
        <div class="btn-group" role="group">
        		
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Followers</div>   
                <div><%= @user.followers.count%></div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Following</div>
                <div><%= @user.following.count%></div>
            </button>
        </div>
           <div class="btn-group" role="group">
           <% if @user.following.count >0 %>
           <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
            html: { method: :delete }, remote: true) do |f| %>
            <%= f.submit "Unfollow",id: "unfollow", type: "button",  class: "btn btn-default" ,datatoggle: "tab"%>
            <% end %>
            <% end %>
            </div>
        </div>
    </div>
        <div class="well">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="tab1">
       
        </div>  
      </div>
    </div> 
</div>

            
    